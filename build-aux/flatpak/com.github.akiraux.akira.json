{
   "app-id": "com.github.akiraux.akiraDevel",
   "runtime": "org.gnome.Platform",
   "runtime-version": "3.34",
   "sdk": "org.gnome.Sdk",
   "base":"io.elementary.BaseApp",
   "base-version": "juno-19.08",
   "command": "com.github.akiraux.akiraDevel",
   "cleanup": [
      "/include",
      "/lib/pkgconfig",
      "/lib/debug",
      "/share/vala",
      "/man",
      "*.a",
      "*.la"
   ],
   "finish-args": [
      "--share=ipc",
      "--socket=x11",
      "--socket=wayland",
      "--talk-name=org.gtk.vfs.*",
      /* dconf */
      "--filesystem=xdg-run/dconf", "--filesystem=~/.config/dconf:ro",
      "--talk-name=ca.desrt.dconf", "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
   ],
   "modules": [
      {
         "name": "goocanvas",
         "config-opts": ["--enable-python=no"],
         "build-options" : {
             "make-install-args" : [
                 "girdir=/app/share/gir-1.0",
                 "typelibdir=/app/lib/girepository-1.0"
             ]
         },
         "sources": [
            {
               "type": "git",
               "url": "https://gitlab.gnome.org/GNOME/goocanvas.git",
               "branch": "wip/albfan/rect-radii"
            }
         ]
      },
      {
         "name": "akira",
         "buildsystem": "meson",
         "config-opts": [
            "-Dprofile=development"
         ],
         "sources": [
            {
               "type": "git",
               "url": "https://github.com/akiraux/akira"
            }
         ]
      }
   ]
}
